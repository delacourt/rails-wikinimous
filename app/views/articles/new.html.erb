<div class="container">
  <h1>Add a new Article</h1>

  <%= form_for(@article) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>

    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>

    <div>
      <%= f.submit%>
    </div>
  <% end %>
</div>
